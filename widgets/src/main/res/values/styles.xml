<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Registration">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Text.Registration.SingleLineItem">
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Text.Registration.MultiLineItem">
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="Text.Registration.MultiLineItem.Editable">
        <item name="android:textAlignment">center</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textColorHint">@color/text_light_gray</item>

    </style>

    <style name="Text.Registration.SingleLineItem.Editable">
        <item name="android:textAlignment">center</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textColorHint">@color/text_light_gray</item>
    </style>
</resources>